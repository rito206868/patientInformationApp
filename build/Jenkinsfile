try {
    timeout(time: 20, unit: 'MINUTES') {
        node('nodejs') {
        	
           stage('Angular Build') {
            	
                //checkout application codebase
                git(url:"${APPLICATION_CODEBASE_GIT_REPO}"
                       , branch:"${BRANCH_NAME}",
                        credentialsId:'health-planner-github-repo-access-secret')
                //sh 'ls -lrst'
				//sh 'npm install -g @angular/cli'
				//sh 'npm install -g npm@latest'
				//sh 'npm update'
				//sh 'ng build'
                
           }
            
            
            stage('Build Docker Image') {
            	
            	//sh 'tar -cvf context.tar nginx build Dockerfile'
            	
                openshift.withCluster() {
                    openshift.withProject() {
                       
                       	//  Run Docker Strategy Build for Health Planner UI Application
                        openshift.apply(openshift.process("-f", "./build/health-planner-docker-build-template.yaml", "-p", "APPLICATION_CODEBASE_GIT_REPO=${APPLICATION_CODEBASE_GIT_REPO}"))
						openshift.startBuild("health-planner-frontend-docker-image-build", "--follow", "--wait")
						
                    }
                }
            }
        }
    }
} catch (err) {
    echo "in catch block"
    echo "Caught: ${err}"
    currentBuild.result = 'FAILURE'
    throw err
}   